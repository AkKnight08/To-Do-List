<html>

<head>
    <title>
        <%=title%>
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/b3348ae33f.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div id="start_box">
        <div class="drpbtn btn-group">
            <button type="button" class="drp dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-list fa-xl" style="color: #ffffff;"></i>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/">Home</a></li>
                <li><a class="dropdown-item" href="/money">Money Management</a></li>
            </ul>
        </div>
        <div id="name">
            <div>
                <h1>Welcome Akshay</h1>
            </div>
        </div>
        <dib id="dtime"></dib>
    </div>
    <form class="cform" action="/create_task" method="post">
        <input class="mtask" type="text" placeholder="Enter Task" name="task" required>
        <select name="type" class="mtype">
            <option selected value="Others">Type</option>
            <option value="Personal">Personal</option>
            <option value="Work">Work</option>
            <option value="House">House</option>
            <option value="Others">Others</option>
        </select>
        <input id="mdate"class="mdate" type="date" placeholder="Enter Date" name="date" required >
        <input class="mtime" type="time" placeholder="Enter Time" name="time" required>
        <button class="msubmit" type="submit">Submit task</button>
    </form>
    <ul>
        <% for(let t of todolist) {%>

            <li id="<%t.id%>" class="<%= t.clicked ? "click" : "not" %>" >
                <%=t.task%>,&nbsp;<%=t.type%>,&nbsp;<%=t.date%>,&nbsp;<%=t.time%>
        <a href="/del/?id=<%=t.id%>"><i class="fa-solid fa-delete-left" style="color: #b30000;"></i></a>
        <a  href="/clicked/?id=<%=t.id%>"class="cbtn"><i class="fa-solid fa-check-to-slot" style="color: #3101df;"></i></a>
            </li>

            <%}%>
    </ul>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>

</html>